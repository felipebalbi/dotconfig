general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "volume master"
order += "ipv6"
order += "ethernet eth0"
order += "wireless wlan0"
order += "run_watch DHCP"
order += "run_watch VPN"
order += "load"
order += "disk /"
order += "tztime local"

volume master {
        format = "â™ª: %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

ethernet eth0 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

wireless wlan0 {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/juniper/pid"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%free"
}

tztime local {
        format = "%m-%d-%Y %H:%M:%S"
}
